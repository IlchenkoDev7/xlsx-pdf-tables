{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src"
    ]
}